#include "main.h"

/**
 * leet - Encodes a string into 1337.
 * @s: The string to encode.
 *
 * Return: A pointer to the encoded string.
 */
char *leet(char *str)
{
    char *leet_chars = "aAeEoOtTlL";
    char *leet_replacements = "4433007711";
    int i, j;

    for (i = 0; s[i] != '\0'; i++)
    {
        for (j = 0; leet_chars[j] != '\0'; j++)
        {
            if (s[i] == leet_chars[j])
            {
                s[i] = leet_replacements[j];
                break;
            }
        }
    }

    return s;
}
